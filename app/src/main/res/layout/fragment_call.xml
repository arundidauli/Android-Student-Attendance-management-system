<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/call_now"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="@dimen/padding_8dp"
        android:background="@drawable/round_fill"
        android:tint="@color/colorPrimary"
        android:src="@mipmap/call"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/call_now"
        android:padding="@dimen/padding_8dp"
        android:fontFamily="@font/proximanovaregular"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/is_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/number"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/padding_4sp"
        android:paddingBottom="@dimen/padding_4sp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="@drawable/orange_border"
        android:fontFamily="@font/proximanovaregular"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_weight="1"
            android:gravity="center_horizontal" />
        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/txt_call_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Now"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>