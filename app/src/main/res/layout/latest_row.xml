<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardElevation="@dimen/padding_4sp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/r_item"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_latest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:foreground="#AA1E1A1A"
            android:src="@mipmap/sky" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:paddingLeft="@dimen/padding_8dp"
                android:text="Toyota Corolla"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/padding_4sp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_my_location" />

                <TextView
                    android:id="@+id/work_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/notosans"
                    android:textColor="@color/white"
                    android:text="Sanbhal Moradabad"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:paddingLeft="@dimen/padding_8dp"
                android:paddingRight="@dimen/padding_8dp"
                android:layout_marginLeft="@dimen/padding_8dp"
                android:layout_marginBottom="@dimen/padding_4sp"
                android:text="Price on call"
                android:textSize="12sp"
                android:background="@drawable/share_background"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>